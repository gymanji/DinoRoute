<!DOCTYPE html>
<html ng-app="MapsApp">
<head>
   <title>Maps App</title>
</head>

<body ng-controller="MapsController">
<div>
   <h3>Google Maps API</h3>
   <form ng-submit="getDirections()">
      <input type="text" ng-model="origin" required/>
      <h3>End</h3>
      <input type="text" ng-model="destination" required/>
      <br/>
      <br/>
      <button action="submit">Find out!</button>
   </form>
   <br/>
   <div> {{ status }} </div>
   <div> {{ result.routes[0].legs[0].duration.text }} </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.28/angular.js"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDDKB4EBWfJj0i2qb-Qul3qxfv9D7Mk_D0"></script>
<script src="/javascripts/MapsController.js"></script>

</body>
</html>